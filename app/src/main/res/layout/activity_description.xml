<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.su.p1.incomeprice.activities.DescriptionActivity">

    <TextView
        android:id="@+id/amountMoneyTextView"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:gravity="center_vertical|right"
        android:hint="amount"
        android:paddingRight="16dp"
        android:textColor="@color/colorIncome"
        android:textSize="35dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/in_exButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorIncome"
            android:text="Income" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/calendarImageView"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/calendar" />

            <TextView
                android:id="@+id/dateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:paddingTop="6dp"
                android:text="dd MMM yyyy"
                android:textSize="12dp" />

        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/category_layout"/>

    <EditText
        android:id="@+id/memoEditText"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:cursorVisible="false"
        android:gravity="top"
        android:hint="Memo..."
        android:textSize="18dp" />

</LinearLayout>
